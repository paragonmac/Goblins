{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "zig: build",
			"type": "shell",
			"command": "zig",
			"args": ["build"],
			"options": { "cwd": "${workspaceFolder}" },
			"group": { "kind": "build", "isDefault": true }
		},
		{
			"label": "zig: run",
			"type": "shell",
			"command": "zig",
			"args": ["build", "run"],
			"options": { "cwd": "${workspaceFolder}" }
		},
		{
			"label": "zig: test",
			"type": "shell",
			"command": "zig",
			"args": ["build", "test"],
			"options": { "cwd": "${workspaceFolder}" },
			"group": "test"
		}
	]
}
